<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="easyrobot">
    <xacro:arg name="initial_positions_file" default="initial_positions.yaml" />

    <!-- Import easyrobot urdf file -->
    <xacro:include filename="$(find easyrobot)/urdf/gzbot.urdf" />

    <!-- Import control_xacro -->
    <xacro:include filename="easyrobot.ros2_control.xacro" />


    <xacro:easyrobot_ros2_control name="FakeSystem" initial_positions_file="$(arg initial_positions_file)"/>

</robot>
